#include <dt-bindings/zmk/matrix_transform.h>
#include "fanplastic-layouts.dtsi"

/ {
    chosen {
//        zephyr,display = &oled;
        zmk,kscan = &kscan0;
        zmk,physical-layout = &fanplastic_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <16>;
        rows = <5>;
// | SW0x00 | SW0x01 | SW0x02 | SW0x03 | SW0x04 | SW0x05 | SW0x06 | SW0x07 |  | SW0x00 | SW0x01 | SW0x02 | SW0x03 | SW0x04 | SW0x05 | SW0x06 | SW0x07 |
// | SW0x08 | SW0x09 | SW0x0A | SW0x0B | SW0x0C | SW0x0D | SW0x0E | SW0x0F |  | SW0x08 | SW0x09 | SW0x0A | SW0x0B | SW0x0C | SW0x0D | SW0x0E | SW0x0F |
// | SW0x10 | SW0x11 | SW0x12 | SW0x13 | SW0x14 | SW0x15 | SW0x16 | SW0x17 |  | SW0x10 | SW0x11 | SW0x12 | SW0x13 | SW0x14 | SW0x15 | SW0x16 | SW0x17 |
// | SW0x18 | SW0x19 | SW0x1A | SW0x1B | SW0x1C | SW0x1D | SW0x1E | SW0x1F |  | SW0x18 | SW0x19 | SW0x1A | SW0x1B | SW0x1C | SW0x1D | SW0x1E | SW0x1F |
// | SW0x20 | SW0x21 | SW0x22 | SW0x23 | SW0x24 | SW0x25 | SW0x26 | SW0x27 |  | SW0x20 | SW0x21 | SW0x22 | SW0x23 | SW0x24 | SW0x25 | SW0x26 | SW0x27 |
        map = <
    RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)  RC(0,5)  RC(0,6)  RC(0,7)     RC(0,8)  RC(0,9)  RC(0,10) RC(0,11) RC(0,12) RC(0,13) RC(0,14) RC(0,15)
    RC(1,0)  RC(1,1)  RC(1,2)  RC(1,3)  RC(1,4)  RC(1,5)  RC(1,6)  RC(1,7)     RC(1,8)  RC(1,9)  RC(1,10) RC(1,11) RC(1,12) RC(1,13) RC(1,14) RC(1,15)
    RC(2,0)  RC(2,1)  RC(2,2)  RC(2,3)  RC(2,4)  RC(2,5)  RC(2,6)  RC(2,7)     RC(2,8)  RC(2,9)  RC(2,10) RC(2,11) RC(2,12) RC(2,13) RC(2,14) RC(2,15)
    RC(4,0)  RC(4,1)  RC(4,2)  RC(4,3)  RC(4,4)  RC(4,5)  RC(4,6)  RC(4,7)     RC(4,8)  RC(4,9)  RC(4,10) RC(4,11) RC(4,12) RC(4,13) RC(4,14) RC(4,15)
    RC(5,0)  RC(5,1)  RC(5,2)  RC(5,3)  RC(5,4)  RC(5,5)  RC(5,6)  RC(5,7)     RC(5,8)  RC(5,9)  RC(5,10) RC(5,11) RC(5,12) RC(5,13) RC(5,14) RC(5,15)
        >;
    };

    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";
        row-gpios
            = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    // TODO: per-key RGB node(s)?
};

&fanplastic_layout { 
    kscan = <&kscan0>;
    transform = <&default_transform>;
};

&pro_micro_i2c {
    status = "okay";

    oled: ssd1306@3c {
        compatible = "solomon,ssd1306fb";
        reg = <0x3c>;
        width = <128>;
        height = <32>;
        segment-offset = <0>;
        page-offset = <0>;
        display-offset = <0>;
        multiplex-ratio = <31>;
        segment-remap;
        com-invdir;
        com-sequential;
        inversion-on;
        prechargep = <0x22>;
    };
};
